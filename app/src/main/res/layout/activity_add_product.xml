<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProductActivity"
    >

    <ScrollView android:layout_width="match_parent"
        android:layout_height="575dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:alpha="1">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Product Features"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Brand:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <Spinner android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/brand"
                    >

                </Spinner>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Product:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <EditText android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/editProduct"
                    >

                </EditText>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Condition:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <EditText android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/editCondition"
                    >

                </EditText>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Size:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <EditText android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/editSize"
                    >

                </EditText>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Your Price:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <EditText android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/editPrice"
                    >

                </EditText>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Tax:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <TextView android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/txtTax"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Price :"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <TextView android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:id="@+id/txtTruePrice"
                    >
                </TextView>
            </LinearLayout>


            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Product"
                />

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Photo:"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000000"
                />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Choose Files:"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />
                <Button android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:text="Choose Files"
                    />


            </LinearLayout>
            <Button android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="Upload"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@drawable/support"
                android:height="100dp"
                android:textColor="#ff3333"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#1B1B1B">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:height="300dp"

                    android:drawableTop="@drawable/logomain"

                    android:drawableBottom="@drawable/line1"
                    android:paddingTop="60dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="2019 â’¸ Trigonic. All rights reserved"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="With love from Trigonic"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>